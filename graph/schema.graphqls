# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Author {
  _id: String!
  firstname: String!
  lastname: String!
}

type NewAuthor {
  firstname: String!
  lastname: String!
}

type Book {
  _id: String!
  title: String!
  author: Author!
}

type NewBook {
  title: String!
  author: Author!
}

type Query {
  author(_id: String!): Author!
  authors: [Author!]!
  book(_id: String!): Book!
  books: [Book!]!
}